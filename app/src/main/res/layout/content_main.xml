<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.court_counter.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/holo_green_dark" >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Team1"
        android:id="@+id/teamAtext"
        android:layout_marginTop="52dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Team2"
        android:id="@+id/teamBtext"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="16dp"
        android:layout_alignTop="@+id/teamAtext"
        android:layout_alignRight="@+id/teamAtext"
        android:layout_alignEnd="@+id/teamAtext" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/team_a_score"
        android:textStyle="bold"
        android:layout_alignRight="@+id/teamAtext"
        android:layout_alignEnd="@+id/teamAtext"
        android:freezesText="true"
        android:layout_below="@+id/teamAtext"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/team_b_score"
        android:layout_alignTop="@+id/team_a_score"
        android:textStyle="bold"
        android:layout_alignRight="@+id/teamBtext"
        android:layout_alignEnd="@+id/teamBtext"
        android:freezesText="true"
        android:layout_marginRight="45dp"
        android:textSize="25sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 points"
        android:id="@+id/button"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/team_a_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addThreeForTeamA"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 points"
        android:id="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="addThreeForTeamB"
        android:layout_alignTop="@+id/button"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 points"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="addTwoForTeamA"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 points"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="addTwoForTeamB"
        android:layout_toEndOf="@+id/button8"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 point"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="addOneForTeamA"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 point"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="addOneForTeamB"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/button7"
        android:onClick="gameReset"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:id="@+id/button8"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="gameFinish"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>